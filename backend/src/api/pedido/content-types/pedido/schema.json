{
  "kind": "collectionType",
  "collectionName": "pedidos",
  "info": {
    "singularName": "pedido",
    "pluralName": "pedidos",
    "displayName": "Pedido"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "order_status": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "preparing",
        "served",
        "paid",
        "cancelled"
      ]
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::item-pedido.item-pedido",
      "mappedBy": "order"
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "customerNotes": {
      "type": "text"
    },
    "staffNotes": {
      "type": "text"
    },
    "restaurante": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::restaurante.restaurante",
      "inversedBy": "pedidos"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "pedidos"
    },
    "mesa_sesion": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::mesa-sesion.mesa-sesion",
      "inversedBy": "pedidos"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "cash",
        "card_present",
        "qr",
        "online"
      ]
    },
    "payment_status": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "refunded"
      ]
    }
  }
}